<p id="notice"><%= notice %></p>

<h1>Clubs</h1>
<table id='ordersTable' class='table table-striped table-sm'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Foundation date</th>
      <th>Federation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<section id="simple">
  <h2>Simple Example</h2>
  <div class="row">
    <div class="span6">
      <h3>Without Select2</h3>
      <form>
        <%= select_tag "clubs", options_from_collection_for_select(@clubs, "id", "name") %>
      </form>

    </div>
    <div class="span6">
      <h3>With Select2</h3>
      <form>
        <%= select_tag "clubs", options_from_collection_for_select(@clubs, "id", "name"), id: "js-example-basic-multiple" %>
      </form>
    </div>
  </div>
</section>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= club.foundation_date %></td>
        <td><%= club.federation.name %></td>
        <td><%= link_to 'Show', club %></td>
        <td><%= link_to 'Edit', edit_club_path(club) %></td>
        <td><%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New club', new_club_path %>

